<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="BottomNavTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/sb_sans</item>
    </style>

    <style name="BottomNav.ActiveIndicator.Transparent">
        <item name="android:color">@android:color/transparent</item>
        <item name="android:width">0dp</item>
        <item name="android:height">0dp</item>
    </style>

    <style name="BottomNav.ActiveIndicator" parent="@style/BottomNav.ActiveIndicator.Transparent" tools:ignore="ResourceCycle" />

    <style name="CustomTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="hintTextColor">@color/text_hint_color</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="hintTextAppearance">@style/CustomHintTextAppearance</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="android:gravity">center_vertical</item> <!-- Выравнивание текста по центру -->
        <item name="android:paddingTop">0dp</item> <!-- Убираем верхний отступ -->
        <item name="android:paddingBottom">0dp</item> <!-- Убираем нижний отступ -->
        <item name="android:paddingStart">0dp</item> <!-- Убираем начальный отступ -->
        <item name="android:paddingEnd">0dp</item> <!-- Убираем конечный отступ -->

    </style>

    <style name="CustomHintTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_hint_color</item>
        <item name="fontFamily">@font/sb_sans</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="AccessibleSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:track">@drawable/sw_track</item>
        <item name="android:thumb">@drawable/sw_thumb</item>
        <item name="android:showText">false</item>
        <item name="android:switchMinWidth">64dp</item>
        <item name="android:switchPadding">0dp</item>
        <item name="android:thumbTextPadding">0dp</item>
    </style>

</resources>



