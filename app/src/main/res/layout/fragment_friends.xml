<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.FriendsFragment"
    android:background="@color/background_sheet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="32sp"
            android:fontFamily="@font/sb_sans_medium"
            android:textColor="@color/white"
            android:layout_marginBottom="24dp"
            android:text="@string/frineds_title"/>

        <ImageView
            android:id="@+id/imageIconSplashScreen"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_spash_2gis" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:fontFamily="@font/sb_sans_medium"
            android:textColor="@color/white"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:text="@string/text_Zaglushka"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>